<Window x:Class="SetpValue.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetpValue"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300" ResizeMode="CanResize" Title="Set parameter value">
    <Border Padding="15">
        <StackPanel>
            <Label Content="Select parameter value:" Margin="0,0,0,10"/>
            <TextBox x:Name="parValue" TextWrapping="NoWrap" Text="Text" Width="265" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,15"/>
            <StackPanel Orientation="Horizontal" Margin="3 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="103"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="okButton" Content="OK" Grid.Column="0" Width="80" Click="SetValue"/>
                    <Button x:Name="cancelButton" Content="Cancel" Grid.Column="2" Width="80" Click="CancelCommand"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

